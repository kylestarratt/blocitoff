<% if @item.valid? %>
  $('#ToDos').append("<%= escape_javascript(render(@item)) %>");
  $('#new_item')[0].reset();
  $('.flash').html("<div class='alert alert-success'><%= @flash[:notice] %></div>");
<% else %>
  $('.flash').html("<div class='alert alert-danger'><%= @flash[:notice] %></div>");
<% end %>
