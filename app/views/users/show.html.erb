<div class="container">
	<div class="row">
		<div class="text-center">
			<h1><%= current_user.name %>'s List of things to get done!</h1><br>
			<p>You have <strong>'7 days'</strong> before the tasks vanish! <strong>Dont waste your time!</strong></p><br>
		</div>
	</div>

	<table id="ToDos" class="table">
		<div class='text-center'>
			<%= render @items %>
		</div>
	</table>

	<div class="text-center">
		<div class='new-item'>
			<h3>Create New ToDo!</h3><br>
			<%= render 'items/form' %>
		</div>
	</div>
</div>
